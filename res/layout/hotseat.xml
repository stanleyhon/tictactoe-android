<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/splash" >


    <com.example.TTTButton
            app:xValue="0"
            app:yValue="2"
            android:id="@+id/x0y2"
            android:layout_height="75dip"
            android:layout_width="75dip"
            android:clickable="true"
            android:textSize="50dip"
            android:text="-"
            android:onClick="buttonPressed"
            />

    <com.example.TTTButton
            app:xValue="1"
            app:yValue="2"
            android:id="@+id/x1y2"
            android:layout_height="75dip"
            android:layout_width="75dip"
            android:clickable="true"
            android:textSize="50dip"
            android:layout_toRightOf="@id/x0y2"
            android:text="-"
            android:onClick="buttonPressed"
            />

    <com.example.TTTButton
            app:xValue="2"
            app:yValue="2"
            android:id="@+id/x2y2"
            android:layout_height="75dip"
            android:layout_width="75dip"
            android:clickable="true"
            android:textSize="50dip"
            android:layout_toRightOf="@id/x1y2"
            android:text="-"
            android:onClick="buttonPressed"
            />

    <com.example.TTTButton
            app:xValue="0"
            app:yValue="1"
            android:id="@+id/x0y1"
            android:layout_height="75dip"
            android:layout_width="75dip"
            android:clickable="true"
            android:textSize="50dip"
            android:layout_below="@id/x0y2"
            android:text="-"
            android:onClick="buttonPressed"
            />

    <com.example.TTTButton
            app:xValue="1"
            app:yValue="1"
            android:id="@+id/x1y1"
            android:layout_height="75dip"
            android:layout_width="75dip"
            android:clickable="true"
            android:textSize="50dip"
            android:layout_below="@id/x1y2"
            android:layout_toRightOf="@id/x0y1"
            android:text="-"
            android:onClick="buttonPressed"
            />

    <com.example.TTTButton
            app:xValue="2"
            app:yValue="1"
            android:id="@+id/x2y1"
            android:layout_height="75dip"
            android:layout_width="75dip"
            android:clickable="true"
            android:textSize="50dip"
            android:layout_below="@id/x2y2"
            android:layout_toRightOf="@id/x1y1"
            android:text="-"
            android:onClick="buttonPressed"
            />

    <com.example.TTTButton
            app:xValue="0"
            app:yValue="0"
            android:id="@+id/x0y0"
            android:layout_height="75dip"
            android:layout_width="75dip"
            android:clickable="true"
            android:textSize="50dip"
            android:layout_below="@id/x0y1"
            android:text="-"
            android:onClick="buttonPressed"
            />

    <com.example.TTTButton
            app:xValue="1"
            app:yValue="0"
            android:id="@+id/x1y0"
            android:layout_height="75dip"
            android:layout_width="75dip"
            android:clickable="true"
            android:textSize="50dip"
            android:layout_below="@id/x1y1"
            android:layout_toRightOf="@id/x0y0"
            android:text="-"
            android:onClick="buttonPressed"
            />

    <com.example.TTTButton
            app:xValue="2"
            app:yValue="0"
            android:id="@+id/x2y0"
            android:layout_height="75dip"
            android:layout_width="75dip"
            android:clickable="true"
            android:textSize="50dip"
            android:layout_toRightOf="@id/x1y0"
            android:layout_below="@id/x2y1"
            android:text="-"
            android:onClick="buttonPressed"
            />

    <TextView
            android:id="@+id/WinIndicator"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/x2y2"
            android:paddingTop="40dip"
            android:paddingLeft="15dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dip"
            android:text="Current Turn:"
            android:visibility="visible"
            />

    <TextView
            android:id="@+id/currentPlayer"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:textSize="95dip"
            android:paddingRight="25dip"
            />

    <Button
            android:id="@+id/playAgain"
            android:layout_height="50dip"
            android:layout_width="fill_parent"
            android:text="PLAY AGAIN?"
            android:enabled="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

</RelativeLayout>